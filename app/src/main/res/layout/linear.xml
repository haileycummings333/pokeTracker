<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainPageL"
    android:layout_marginVertical="30dp"
    android:background="@color/backgroundPurple"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="130dp"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="140dp"
        android:text="@string/subtitle" />

    <TextView
        android:id="@+id/nationalNumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/natlnum" />

    <EditText
        android:id="@+id/ntnlNumEdit"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="180dp"
        android:layout_marginTop="-40dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/name" />

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="180dp"
        android:layout_marginTop="-40dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/speciesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/species" />

    <EditText
        android:id="@+id/speciesEdit"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="180dp"
        android:layout_marginTop="-40dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/genderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/gen" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="260dp"
        android:layout_height="51dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="-40dp">

        <RadioButton
            android:id="@+id/femaleRdButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="4dp"
            android:text="@string/female" />

        <RadioButton
            android:id="@+id/unkRdButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="-37.5dp"
            android:paddingHorizontal="4dp"
            android:text="@string/unknown" />

        <RadioButton
            android:id="@+id/maleRdButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="-37.5dp"
            android:paddingHorizontal="4dp"
            android:text="@string/male" />

    </RadioGroup>

    <TextView
        android:id="@+id/heightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/ht" />

    <EditText
        android:id="@+id/heightEdit"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="180dp"
        android:layout_marginTop="-40dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/weightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/wgt" />

    <EditText
        android:id="@+id/weightEdit"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="180dp"
        android:layout_marginTop="-40dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/levelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/lvl" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="163dp"
        android:layout_height="32dp"
        android:layout_marginHorizontal="180dp"
        android:layout_marginTop="-30dp"
        android:entries="@array/levelValues" />

    <TextView
        android:id="@+id/baseStatsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/basestats"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/hp" />

    <EditText
        android:id="@+id/hpEdit"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="180dp"
        android:layout_marginTop="-40dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/attackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/attack" />

    <EditText
        android:id="@+id/attackEdit"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="180dp"
        android:layout_marginTop="-40dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/defenseEdit"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="180dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/defenseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-30dp"
        android:text="@string/defense" />


    <Button
        android:id="@+id/resetButton"
        android:layout_width="114dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="160dp"
        android:layout_marginVertical="30dp"
        android:text="@string/reset" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="280dp"
        android:layout_marginTop="-78dp"
        android:text="@string/submit" />

    <Button
        android:id="@+id/backgroundButton"
        android:layout_width="131dp"
        android:layout_height="66dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="-50dp"
        android:text="@string/chgeBckd"
        android:textSize="12sp" />

</LinearLayout>